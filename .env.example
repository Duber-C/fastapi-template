# App environment: local, dev, prod
ENV=local
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/postgres
REDIS_URL=redis://redis:6379

# Replace with a long random string in production
SECRET_KEY=replace-me
ALGORITHM=HS256

# Access token validity in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Used by `python -m src.core.create_admin`
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# SMTP settings for production email
MAIL_USERNAME=your-user
MAIL_PASSWORD=your-pass
MAIL_FROM=your-email@example.com
MAIL_PORT=465
MAIL_SERVER=smtp.example.com
MAIL_STARTTLS=False
MAIL_SSL_TLS=True
MAIL_USE_CREDENTIALS=True
MAIL_VALIDATE_CERTS=True

# S3 upload config
S3_REGION=us-east-1
S3_PREFIX=files
S3_BUCKET=bucket
